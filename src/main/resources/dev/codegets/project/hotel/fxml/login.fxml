<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.codegets.project.hotel.controllers.LoginController">

    <VBox alignment="CENTER" prefHeight="550.0" prefWidth="350.0" styleClass="left-panel">
        <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
         <image>
            <Image url="@../imagen/hotel.png" />
         </image>
        </ImageView>
        <Label text="Gestión Hotelera" textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Sistema TPS" textFill="#90caf9">
            <font>
                <Font size="16.0" />
            </font>
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>
        </Label>
        <Button styleClass="btn-secondary" text="Asistencia / Reportar Fallo" />
        <Label text="v1.0 - Acceso Privado" textFill="#819198">
            <VBox.margin>
                <Insets top="50.0" />
            </VBox.margin>
        </Label>
    </VBox>

    <AnchorPane styleClass="right-panel" HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="400.0" prefWidth="300.0" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <Label styleClass="form-title" text="ACCESO DE USUARIO">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>

            <VBox prefWidth="300.0" spacing="5.0">
                <Label styleClass="label-input" text="USUARIO (USERNAME)" />
                <TextField fx:id="txtUsername" promptText="admin o gerente" styleClass="text-input" />
            </VBox>

            <VBox prefWidth="300.0" spacing="5.0">
                <Label styleClass="label-input" text="CONTRASEÑA" />
                <PasswordField fx:id="txtPassword" promptText="Ingresa tu contraseña" styleClass="text-input" />
            </VBox>

            <HBox alignment="CENTER_LEFT" prefWidth="300.0">
                <CheckBox styleClass="checkbox" text="Recordarme" />
            </HBox>

            <Button fx:id="btnLogin" onAction="#handleLogin" prefWidth="300.0" styleClass="btn-primary-login" text="ACCEDER AL SISTEMA" />

            <Label styleClass="link-forgot" text="¿Olvidaste tu Contraseña?" />
        </VBox>
    </AnchorPane>

    <style>
        /* Panel Izquierdo (Oscuro, Azul/Teal del proyecto) */
        .left-panel {
        -fx-background-color: #263238;
        -fx-padding: 40px;
        }

        /* Panel Derecho (Claro, Formulario) */
        .right-panel {
        -fx-background-color: #F8F8F8; /* Gris muy claro */
        -fx-padding: 40px 60px;
        }

        /* Títulos y Texto */
        .form-title {
        -fx-text-fill: #0077b6; /* Azul Primario del Proyecto */
        -fx-padding: 0 0 10px 0;
        }
        .label-input {
        -fx-font-weight: bold;
        -fx-text-fill: #424242;
        -fx-font-size: 11px;
        -fx-padding: 0 0 3px 0;
        }
        .checkbox {
        -fx-text-fill: #666666;
        }

        /* Campos de Texto (Estilo Moderno Sin Borde) */
        .text-input {
        -fx-background-color: transparent;
        -fx-border-color: #D3D3D3;
        -fx-border-width: 0 0 2px 0; /* Línea inferior fina */
        -fx-padding: 8px 0;
        -fx-font-size: 14px;
        }
        .text-input:focused {
        -fx-border-color: #00A389; /* Teal de acento */
        }

        /* Botón Primario de Login */
        .btn-primary-login {
        -fx-background-color: #00A389; /* Teal Brillante */
        -fx-text-fill: white;
        -fx-font-weight: bold;
        -fx-font-size: 16px;
        -fx-padding: 15px;
        -fx-background-radius: 5px;
        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.2, 0, 2);
        -fx-cursor: hand;
        }
        .btn-primary-login:hover {
        -fx-background-color: #00897B;
        }

        /* Botón Secundario (Panel Izquierdo) */
        .btn-secondary {
        -fx-background-color: transparent;
        -fx-text-fill: #90CAF9;
        -fx-border-color: #90CAF9;
        -fx-border-radius: 4px;
        -fx-padding: 8px 15px;
        -fx-cursor: hand;
        }

        /* Enlace Olvidar Contraseña */
        .link-forgot {
        -fx-text-fill: #0077b6;
        -fx-font-size: 12px;
        -fx-cursor: hand;
        }
    </style>
</HBox>
