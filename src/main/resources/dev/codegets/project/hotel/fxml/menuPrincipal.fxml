<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.codegets.project.hotel.controllers.MenuPrincipalController">
    <left>
        <VBox prefWidth="200.0" spacing="10.0" style="-fx-background-color: #0077b6;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label fx:id="lblBienvenida" text="Bienvenido" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Label fx:id="lblRol" text="Rol: ADMINISTRADOR" textFill="WHITE" VBox.vgrow="NEVER" />

            <VBox fx:id="menuAdmin" spacing="10.0" VBox.vgrow="ALWAYS">
                <Label text="ADMINISTRACIÓN" textFill="#e0e0e0" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;" />
                <Button text="Configuración" prefWidth="180.0" onAction="#handleConfiguracion" styleClass="menu-button" />
            </VBox>

            <VBox fx:id="menuGerente" spacing="10.0" managed="false" visible="false" VBox.vgrow="ALWAYS">
                <Label text="OPERACIONES" textFill="#e0e0e0" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;" />
                <Button text="Reservas" prefWidth="180.0" onAction="#handleReservas" styleClass="menu-button" />
                <Button text="Check-in" prefWidth="180.0" onAction="#handleCheckIn" styleClass="menu-button" />
                <Button text="Habitaciones" prefWidth="180.0" onAction="#handleHabitaciones" styleClass="menu-button" />
                <Button text="Check-out y Pagos" prefWidth="180.0" onAction="#handleCheckOut" styleClass="menu-button" />
                <Button text="Reportes" prefWidth="180.0" onAction="#handleReportes" styleClass="menu-button" />
            </VBox>

            <Button text="Cerrar Sesión" onAction="#handleCerrarSesion" prefWidth="180.0" style="-fx-background-color: #e63946; -fx-text-fill: white; -fx-font-weight: bold;" />
        </VBox>
    </left>
    <center>
        <VBox fx:id="contentArea" alignment="CENTER" BorderPane.alignment="CENTER">
            <Label text="Selecciona una opción del menú" />
        </VBox>
    </center>
    <style>
        .menu-button {
        -fx-background-color: transparent;
        -fx-text-fill: white;
        -fx-alignment: CENTER_LEFT;
        -fx-border-color: #0096c7;
        -fx-border-width: 0 0 0 3px;
        }
        .menu-button:hover {
        -fx-background-color: #005f93;
        }
    </style>
</BorderPane>