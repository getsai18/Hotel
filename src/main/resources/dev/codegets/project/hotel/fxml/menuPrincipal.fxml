<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="750.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.codegets.project.hotel.controllers.MenuPrincipalController">

    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>

    <left>
        <VBox prefWidth="250.0" spacing="15.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
            </padding>

            <Label styleClass="logo-text" text="TPS Hotel :)">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="15.0" />
                </VBox.margin>
            </Label>

            <Label fx:id="lblBienvenida" styleClass="user-name" text="Bienvenido" />
            <Label fx:id="lblRol" styleClass="user-role" text="Rol: ADMINISTRADOR" VBox.vgrow="NEVER" />

            <VBox fx:id="menuAdmin" spacing="10.0" VBox.vgrow="SOMETIMES">
                <Label styleClass="menu-section-title" text="ADMINISTRACIÓN" />
                <Button onAction="#handleConfiguracion" prefWidth="230.0" styleClass="menu-button-main" text="Configuración" />
            </VBox>

            <VBox fx:id="menuGerente" managed="false" spacing="10.0" visible="false" VBox.vgrow="SOMETIMES">
                <Label styleClass="menu-section-title" text="OPERACIONES" />
                <Button onAction="#handleReservas" prefWidth="230.0" styleClass="menu-button-main" text="Reservas" />
                <Button onAction="#handleCheckIn" prefWidth="230.0" styleClass="menu-button-main" text="Check-in" />
                <Button onAction="#handleHabitaciones" prefWidth="230.0" styleClass="menu-button-main" text="Habitaciones" />
                <Button onAction="#handleCheckOut" prefWidth="230.0" styleClass="menu-button-main" text="Check-out y Pagos" />
                <Button onAction="#handleReportes" prefWidth="230.0" styleClass="menu-button-main" text="Reportes" />
            </VBox>

            <VBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
                <Button onAction="#handleCerrarSesion" prefWidth="230.0" styleClass="btn-logout" text="Cerrar Sesión" />
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox fx:id="contentArea" alignment="CENTER" styleClass="content-area" BorderPane.alignment="CENTER">
            <Label styleClass="welcome-text" text="Selecciona una opción del menú" />
        </VBox>
    </center>
</BorderPane>
